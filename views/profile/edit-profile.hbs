<div class="container">
    <div class="row">
        <div class="col-md-3">
            {{> profileSidebar}}
        </div>
        <div class="col-md-9">
            {{> profileNav}}
            <div class="row">
                <div class="col">
                    <h2 class="text-left" style="display: inline-block">Edit Profile</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <form ref='uploadForm' id='OwnerPictureUploadForm' action='/api/upload' method='post' encType="multipart/form-data">
                    <div class="form-group">
                        <input type="hidden" name="id" value="{{ownerid}}" />
                        <input type="hidden" name="name" value="{{ownername}}" />
                        <input type="file" name="ownerPicture" />
                        <button type="submit" class="btn btn-success" id="upload">Upload!</button>
                    </div>
                </form>

                <form id="edit-profile" name="edit-profile" method="post" action="/api/edit-profile">
                    <div class="form-group">
                        <label for="name" class="col-form-label">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{ownerName}}">
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-form-label">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{ownerEmail}}">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="location" class="col-form-label">Location</label>
                            <input type="text" class="form-control" name="location" placeholder="City" value="{{ownerLocation}}">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="gender" class="col-form-label">Gender</label>
                            <select required name="gender" class="form-control">
                                {{#if isMale}}
                                <option name="gender" value="male" selected>Male</option>
                                <option name="gender" value="female">Female</option>
                                {{else}}
                                <option name="gender" value="male">Male</option>
                                <option name="gender" value="female" selected>Female</option>
                                {{/if}}
                            </select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="age" class="col-form-label">Age</label>
                            <input class="form-control" name="age" type="number" value="{{ownerAge}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="bio">Bio</label>
                        <textarea class="form-control" name="bio" type="text" rows="3">{{ownerBio}}</textarea>
                    </div>
                    <div class="form-group text-right">
                        <button id="cancel-edit" class="btn btn-danger" type="button">Cancel</button>
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
